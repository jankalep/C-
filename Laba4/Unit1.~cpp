void __fastcall TForm1::Edit1KeyPress(TObject *Sender, char &Key)
{
   AnsiString s1=Edit1->Text,s2 ;
   if (Key==13)
   {
   int p ;
     if ( s1.Length()<15 ) {
      ShowMessage("¬ведите строку побольше");}
      else {
     s2=s1.SubString(5 ,11); }

     AnsiString s3 ;
      int t=s1.Length();
      for ( int i=1 ; i<t ; i++)
      {
       if (s1[i]== ' ') {
       p=i ;
       break;
           }
           else { p=5 ;}
       }
        s3= s1.SubString(p ,t-p);
        s2.Insert(s3,12);
     //ShowMessage("¬вод сделан");



     Memo1->Lines->Add(s2);
     s2=" "ж
         }
}
